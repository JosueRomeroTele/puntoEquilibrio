<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/constraintEmpresas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imagen_cv_producto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/perfil">

        </ImageView>

        <TextView
            android:id="@+id/id_nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Junior romero villalva"
            android:textSize="14sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/id_dniUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombreUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="dni : 73124086"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/id_rucUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_dniUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Ruc : 1008420072"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_correoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_rucUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="correo :asda@das.com "
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>