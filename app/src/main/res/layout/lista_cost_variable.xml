<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/constraintProducto"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/imagen_cv_producto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/automercado">

        </ImageView>
        <TextView
            android:id="@+id/id_nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre producto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            >

        </TextView>

        <TextView
            android:id="@+id/id_costoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_nombreProducto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Costo Producto"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/id_costoVariable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_costoProducto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Costo Variable"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_costoVariable"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imagen_cv_producto"
            android:layout_toRightOf="@+id/imagen_cv_producto"
            android:text="Costo Variable"
            android:textStyle="bold"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>